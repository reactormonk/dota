%div[@game, :id]
  %h1
    = block(:game_title) do
      %span(class="desc")
        Game #
        = @game.id
        in der League
        = @game.league.name
      %span(class="state #{@game.state}")
        Status:
        = @game.state
  .game_actions
    = block(:game_actions)
  .game_content
    = block(:game_content)
