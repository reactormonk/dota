!!! 1.0 Strict
%html{html_attrs("en")}
  %head
    / http://wiki.github.com/botanicus/rango/template-inheritance
    %title= block(:title, t.showcase.title)
    %meta{"http-equiv" => "content-type", content: "text/html; charset=utf-8"}
    %meta{name: "description", content: block(:description, "")}
    %meta{name: "keywords", content: block(:keywords, "")}
    %meta{name: "author", content: "Simon Hafner"}
    -#= javascripts *block(:javascripts, Array.new)
    -#= stylesheets *block(:stylesheets, Array.new)
    = block(:head)
  %body
    .container
      = Menu.new(env).menu
      .content
        - if (notice = flash.notice) || (error = flash.error)
          .flash
            - if notice
              .notice
                = notice
            - if error
              .error
                = error
        = block(:content)
      .footer
        Â©
        = copyright(2010)
        Tass
        = link_to t.base.sources, "http://github.com/Tass/dota"
