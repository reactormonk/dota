!!! Strict
%html{ html_attrs("de") }
  %head
    %title
      Dota League Organizer
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }/
    %link{ :href => "/stylesheets/master.css", :rel => "stylesheet", :media => "screen", :type => "text/css", :charset => "utf-8" }/
  %body
    #menu
      #global
      %ul
        %li
          = link_to "Players", resource(:players)
        %li
          = link_to "Games", resource(:games)
        %li
          = link_to "Leagues", resource(:leagues)
      #personal
      - if session.user
        - if session.user.playing?
          #actual_game
            = link_to "Aktuelles Game", resource(session.user.where_playing)
            = link_to "Leave", resource(session.user.where_playing, :leave)
        = link_to "Logout", "/logout"
      - else
        = link_to "Login", "/login"

    - unless message.empty?
      #message
        - if message[:error]
          .error
            &= message[:error]
        - if message[:notice]
          .notice
            &= message[:notice]
    #content
      = catch_content :for_layout
    #foot
      &copy; 2009
      Tass
